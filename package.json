{
  "name": "proton-repo-proxy",
  "version": "1.0.0",
  "description": "APT repository proxy for Proton applications using Cloudflare Workers",
  "main": "dist/worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "ci:check-proton-versions:download": "tsx src/github/check-proton-versions/download-proton-api.ts",
    "ci:check-proton-versions:validate": "tsx src/github/check-proton-versions/validate-proton-api.ts",
    "ci:check-proton-versions:versions": "tsx src/github/check-proton-versions/extract-latest-versions.ts",
    "ci:check-kv-caches": "tsx src/github/check-kv-caches/check-caches.ts",
    "ci:update-hashes": "tsx src/github/update-hashes/download-and-hash-all.ts",
    "ci:generate-metadata": "tsx src/github/generate-metadata.ts",
    "ci:upload-metadata": "tsx src/github/upload-metadata.ts",
    "dev:verify-cache": "tsx src/dev/verify-cache.ts",
    "dev:calculate-hashes": "tsx src/dev/calculate-hashes.ts",
    "dev:calculate-hashes:no-upload": "tsx src/dev/calculate-hashes.ts --no-upload",
    "dev:clear-cache": "tsx src/dev/clear-cache.ts"
  },
  "keywords": [
    "proton",
    "apt",
    "debian",
    "ubuntu",
    "repository",
    "proxy",
    "cloudflare-workers",
    "typescript"
  ],
  "author": "baxyz",
  "license": "AGPL-3.0-or-later",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "repository": "github:Proton-Makers/proton-repo-proxy",
  "bugs": {
    "url": "https://github.com/Proton-Makers/proton-repo-proxy/issues"
  },
  "homepage": "https://proton-makers.github.io/proton-repo-proxy/",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@cloudflare/workers-types": "^4.20241001.0",
    "@types/node": "^20.8.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "hono": "^4.9.9",
    "openpgp": "^5.11.0",
    "zod": "^4.1.11"
  }
}
