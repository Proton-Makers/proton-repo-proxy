{
  "name": "repo-proxy",
  "version": "4.0.0",
  "description": "Multi-source APT/DEB repository proxy using Cloudflare Workers",
  "main": "dist/worker.js",
  "type": "module",
  "scripts": {
    "ci:source:proton": "tsx src/github/1-sources/source-proton.run.ts",
    "ci:descriptor:proton": "tsx src/github/2-descriptors/descriptor-proton.run.ts",
    "ci:repo:apt": "tsx src/github/3-repos/repo-apt.run.ts",

    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",

    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "keywords": [
    "proton",
    "apt",
    "debian",
    "ubuntu",
    "repository",
    "proxy",
    "cloudflare-workers",
    "typescript"
  ],
  "author": "baxyz",
  "license": "AGPL-3.0-or-later",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "repository": "github:baxyz/repo-proxy",
  "bugs": {
    "url": "https://github.com/baxyz/repo-proxy/issues"
  },
  "homepage": "https://baxyz.github.io/repo-proxy/",
  "devDependencies": {
    "@actions/cache": "^4.1.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^2.0.0",
    "@biomejs/biome": "^2.2.4",
    "@cloudflare/workers-types": "^4.20241001.0",
    "@types/node": "^20.8.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}
