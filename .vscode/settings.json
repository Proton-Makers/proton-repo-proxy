{
  // Biome configuration
  "editor.formatOnSave": true,
  // PSI Header configuration
  "psi-header.config": {
    "author": "baxyz",
    "authorEmail": "baxy@etik.com",
    "license": "AGPL-3.0-or-later",
    "company": "",
    "copyrightHolder": "baxyz",
    "forceToTop": true
  },
  "psi-header.templates": [
    {
      "language": "typescript",
      "template": [
        "This file is part of proton-repo-proxy.",
        "Copyright (C) <<yeartoyear>> <<copyrightHolder>>",
        "SPDX-License-Identifier: <<spdxid>>"
      ]
    },
    {
      "language": "javascript",
      "template": [
        "This file is part of proton-repo-proxy.",
        "Copyright (C) <<yeartoyear>> <<copyrightHolder>>",
        "SPDX-License-Identifier: <<spdxid>>"
      ]
    }
  ],
  "psi-header.changes-tracking": {
    "isActive": true,
    "modAuthor": "baxyz",
    "modDate": " - modDate",
    "modDateFormat": "dd/MM/yyyy",
    "include": ["typescript", "javascript"],
    "exclude": ["plaintext"]
  },
  "psi-header.lang-config": [
    {
      "language": "typescript",
      "begin": "/**",
      "prefix": " * ",
      "end": " */",
      "blankLinesAfter": 1
    },
    {
      "language": "javascript",
      "begin": "/**",
      "prefix": " * ",
      "end": " */",
      "blankLinesAfter": 1
    }
  ],
  "conventionalCommits.scopes": ["CI-CD"],
  // TypeScript configuration
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quotemark": "single",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  // ESLint configuration
  "eslint.workingDirectories": ["."],
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  // Package manager
  "npm.packageManager": "pnpm",
  // Markdown configuration
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.preview.autoShowPreviewToSide": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.rulers": [80],
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  // Language-specific formatters
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
